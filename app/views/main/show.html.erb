<div class="mobile-posts">
<%@feeds.each do |feed|%>
  <%if feed != nil%>
    <div id="single-link">
      <h3 class="post-title"><%= "#{feed.channel.title}".first(20) %></h3>
      <%feed.items.first(10).each do |item|%>
          <%  @link_tag = "#{item.link}" %>
          <%= link_to "#{item.title}".first(45), @link_tag %>
        <%= link_to save_path(:title => "#{item.title}", :link => "#{item.link}", :description => "#{item.description}"), controller: 'user', action: 'article', method: :post, data: {confirm: "Are you sure?"} do %>
        <input class="post-button" type="button" value="Save Article" confirm="hello">
        <% end %>
            <br>
          <br>
        <%end%>
    <%end%>
  </div>
