<div class="signup">
      <h1>Signup</h1>
      <%= form_for :user, url: '/signup' do |f| %>
      <%= f.text_field :name, placeholder: "Full Name", class: "email"%><br>
      <%= f.email_field :email, placeholder: "email address", class: "email"%><br>
      <%= f.password_field :password, placeholder: "Password", class: "password"%><br>
      <% if flash[:notice] %>
          <div class="notice"><%= flash[:notice] %></div>
        <% end %>
      <%= f.submit "Submit", class: "button" %>
      <% end %>

  </div>
